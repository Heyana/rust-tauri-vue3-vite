{
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ESNext",
        "module": "CommonJS",
        "sourceMap": false,
        "outDir": "./dist",
        "declaration": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./*"
            ],
            "~/*": [
                "electron/*"
            ],
        },
        "lib": [
            "esnext",
            "dom",
        ],
        "types": [
            "vite/client",
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "@vuedx/typescript-plugin-vue"
            }
        ],
    },
    "include": [
        "src",
        "main",
        "src/utils",
        "typings"
    ],
    "exclude": [
        "**/*.js",
        "**/*.vue"
    ]
}